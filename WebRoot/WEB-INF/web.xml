<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <!-- filters -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>
            org.springframework.web.filter.CharacterEncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>setThreadLocalFilter</filter-name>
        <filter-class>com.web.app.filter.PrepareRequestDataFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>setThreadLocalFilter</filter-name>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.json</url-pattern>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>delegatingPostFilter</filter-name>
        <filter-class>com.web.app.filter.DelegatingFormPostFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>delegatingPostFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>restoreRedirectedRequestDataFilter</filter-name>
        <filter-class>pub.web.RestoreRedirectedRequestDataFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>restoreRedirectedRequestDataFilter</filter-name>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    
   <!-- mmall filter  -->
	<filter>
		<filter-name>mmallSecurityFilter</filter-name>
		<filter-class>
			com.web.mmall.filter.SecurityFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>mmallSecurityFilter</filter-name>
		<url-pattern>/mmall/*</url-pattern>		
	</filter-mapping>
	
	
   <!-- pmanager filter  -->
   <filter>
		<filter-name>pmanagerSecurityFilter</filter-name>
		<filter-class>
			com.web.pmanager.filter.SecurityFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>pmanagerSecurityFilter</filter-name>
		<url-pattern>/pmanager/*</url-pattern>		
	</filter-mapping>
	
    <!-- UrlRewrite -->
	<filter>
       <filter-name>UrlRewriteFilter</filter-name>
       <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
       <init-param>
	      <param-name>logLevel</param-name>
	      <param-value>ERROR</param-value>
    	</init-param>
    </filter>
    <filter-mapping>
       <filter-name>UrlRewriteFilter</filter-name>
       <url-pattern>/*</url-pattern>
    </filter-mapping> 
    
     <filter>
        <filter-name>gzipFilter</filter-name>
        <filter-class>com.web.app.filter.GzipFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>*.json</url-pattern>
    </filter-mapping>   
           
    <!-- listeners -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>
            com.web.app.listener.PrepareGlobalDataListener
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            com.web.app.listener.PrepareSessionDataListener
        </listener-class>
    </listener>

    <!-- servlets -->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>

    <!-- misc -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>       
        <welcome-file>index.htm</welcome-file>   
    	<welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
	<error-page>   
	        <error-code>404</error-code>   
	        <location>/common/error.jsp</location>   
	</error-page>
	
	<session-config>  
         <session-timeout>120</session-timeout>  
   </session-config>
   
</web-app>
